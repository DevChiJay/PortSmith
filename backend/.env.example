# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/apismith

# JWT Authentication (New - Required)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id-from-oauth-app
GITHUB_CLIENT_SECRET=your-github-client-secret-from-oauth-app
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# Clerk Authentication (Deprecated - Will be removed after migration)
# CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_key
# CLERK_SECRET_KEY=sk_test_your_clerk_secret

# External API Keys (Optional - for specific API integrations)
# GITHUB_TOKEN=your_github_personal_access_token
# OPENWEATHER_KEY=your_openweather_api_key

# External API Source Configuration (for docs integration)
GATEWAY_BASE_URL=http://localhost:8000
# WEATHER_API_KEY=your_weather_api_key_if_needed
# AI_SERVICES_API_KEY=your_ai_services_api_key_if_needed

# Logging
LOG_LEVEL=debug

# CORS Configuration
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email Configuration (Required for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@gmail.com
APP_NAME=APISmith
FRONTEND_URL=http://localhost:3000
